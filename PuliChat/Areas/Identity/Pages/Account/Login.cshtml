@page
@model LoginModel

<div class="main main-login">
    <section>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div style="text-align: center; margin-top: 5%;">
                    <h2 style="color: white;">Hi!</h2>
                    <h3>We're glad you're here again!</h3>
                </div>
                <hr />

                <h5 style="font-weight: bold;">Login</h5>
                <input asp-for="Input.UserName" class="input" aria-required="true" />
                <label asp-for="Input.UserName" class="form-label input" hidden></label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div>
                <h5 style="font-weight: bold;">Password</h5>
                <input asp-for="Input.Password" class="input" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label" hidden></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="input button">Log in</button>
            </div>
            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        </form>
    </section>
    <hr style="width: 80%; margin-left: 10%;" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
