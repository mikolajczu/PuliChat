@model PuliChat.Entities.Models.Channel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main main-login" style="width: 300px; height: 250px; margin: auto;">
    <section>
        <div style="text-align: center; margin-top: 5%;">
            <h2 style="color: white;">Create channel!</h2>
        </div>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5 style="font-weight: bold;">Channel name</h5>
                <label asp-for="Name" class="control-label" hidden></label>
                <input asp-for="Name" class="input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="ServerId" class="form-control" asp-items="ViewBag.ServerId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="input button" />
            </div>
        </form>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
